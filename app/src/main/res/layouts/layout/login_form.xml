<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bubu_logo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bubuinverted" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="80dp"
            android:text="Please login to continue"
            android:textColor="#9E9E9E"/>

        <EditText
            android:id="@+id/username_txtbox"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/top_rounded_edittext"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="15dp"
            android:hint="Email"
            android:textColorHint="#BDBDBD"/>

        <EditText
            android:id="@+id/password_txtbox"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bottom_rounded_edittext"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#BDBDBD"/>

        <TextView
            android:id="@+id/forgot_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            fancy:fb_text="LOGIN"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_radius="25dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            fancy:fb_focusColor="#00897B"
            fancy:fb_textFontRes="@font/lato_bold"/>

    </LinearLayout>

</RelativeLayout>